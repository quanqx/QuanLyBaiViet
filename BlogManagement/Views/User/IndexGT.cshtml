@model BlogManagement.DAL.Entities.Account

@{
    ViewBag.Title = "IndexGT";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<p>
    @Html.ActionLink("Giới thiệu", "Create")
</p>

<div class="col-md-2" style="border:1px solid;border-color:cornflowerblue; top: 60px;">
    @Html.Action("NavLeftPartial", "Home")
</div>
<div class="box">
    <div class="item">
        <div class="image">
            <a style="padding: 0 3px;" data-toggle="modal" data-target="#modalUpdate">
                <span><img class="img-user" src="@Url.Content("~/Images/"+Model.Image)" width="200" height="200" /></span>
            </a>
            <div class="modal fade" id="modalUpdate" role="dialog">
                <div class="modal-dialog modal-body">
                    <div class="modal-content">
                        @using (Html.BeginForm("Thaydoianh", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Chọn ảnh </h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.AccountId)



                                @Html.HiddenFor(model => model.UserName)

                                @Html.HiddenFor(model => model.Email)
                                @Html.HiddenFor(model => model.Image)

                                @Html.HiddenFor(model => model.PassWord)



                                <div class="form-group">
                                    @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input type="file" name="updateFile">
                                        @*Thông báo trùng*@
                                        @ViewBag.HinhAnh
                                    </div>
                                </div>


                                @Html.HiddenFor(model => model.isAdmin)


                                @Html.HiddenFor(model => model.EmailConfirmed)

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div class="Thaydoianh">
            <a>
                <a style="padding: 0 3px;" data-toggle="modal" data-target="#modalUpdate3">
                    <span>Thay đổi ảnh</span>
                </a>
                <div class="modal fade" id="modalUpdate3" role="dialog">
                    <div class="modal-dialog modal-body">
                        <div class="modal-content">
                            @using (Html.BeginForm("Thaydoianh", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Chọn ảnh</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.AccountId)



                                    @Html.HiddenFor(model => model.UserName)

                                    @Html.HiddenFor(model => model.Email)
                                    @Html.HiddenFor(model => model.Image)

                                    @Html.HiddenFor(model => model.PassWord)



                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input type="file" name="updateFile">
                                            @*Thông báo trùng*@
                                            @ViewBag.HinhAnh
                                        </div>
                                    </div>


                                    @Html.HiddenFor(model => model.isAdmin)


                                    @Html.HiddenFor(model => model.EmailConfirmed)

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>


                            }
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>


                        </div>
                    </div>
                </div>
        </div>
    </div>

    <div class="name" >

        <a href="@Url.Action("IndexGT","User")">@Url.Content(Model.UserName)</a>
    </div>
    <div class="email">

        <span>@Model.Email</span>


    </div>




  <a class="gioithieu">
        <a style="padding: 0 3px;" data-toggle="modal" data-target="#modalUpdate4">
      <span class="glyphicon glyphicon-edit"><input type="submit" name="submit" value="Chỉnh sửa hồ sơ" /></span></a>
        <div class="modal fade" id="modalUpdate4" role="dialog">
            <div class="modal-dialog modal-body">
                <div class="modal-content">
                    @using (Html.BeginForm("ChinhSua", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Chỉnh sửa hồ sơ</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.AccountId)


                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.Email)
                            @Html.HiddenFor(model => model.Image)

                            @Html.HiddenFor(model => model.PassWord)



                            <div class="form-group">
                                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" name="updateFile">
                                    @*Thông báo trùng*@
                                    @ViewBag.HinhAnh
                                </div>
                            </div>


                            @Html.HiddenFor(model => model.isAdmin)


                            @Html.HiddenFor(model => model.EmailConfirmed)

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                    }
                </div>
            </div>
        </div>
        @*<input type="submit" name="submit" value="Chỉnh sửa" onclick="location.href='@Url.Action("ChinhSua", "User", new { @ID = Model.AccountId })'" />*@
    </a>

</div>

