@model BlogManagement.DAL.Entities.Account

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>ChinhSua</h2>

<div class="col-md-2" style="border:1px solid;border-color:cornflowerblue; top: 60px;">
    @Html.Action("NavLeftPartial", "Home")
</div>
@using (Html.BeginForm("Thaydoianh", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Account</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AccountId)



    @Html.HiddenFor(model => model.UserName)

    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Image)

    @Html.HiddenFor(model => model.PassWord)



    <<div class="form-group">
        @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="updateFile">
            @*Thông báo trùng*@
            @ViewBag.HinhAnh
        </div>
    </div>


    @Html.HiddenFor(model => model.isAdmin)


    @Html.HiddenFor(model => model.EmailConfirmed)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
